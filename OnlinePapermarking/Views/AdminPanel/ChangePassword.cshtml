@if (Session["LoginId"] == null)
{
    Layout = null;
    @Html.Action("CheckCookies", "Home");

}

@if (Session["UserRoleId"] != null)
{
    if (Session["UserRoleId"].ToString() != "1")
    {
        Layout = null;
        @Html.Action("ReturnToHome", "Home");
    }
}

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_adminPanelSideNav.cshtml";
}

<style>
    .sidebar[data-color="blue"] .nav li.nav-ChangePassword > a:not([data-toggle="collapse"]),
    .off-canvas-sidebar[data-color="blue"] .nav li.nav-ChangePassword > a:not([data-toggle="collapse"]),
    .nav li.nav-ChangePassword i {
        color: #0a4b7a;
    }

    .sidebar .nav li.nav-ChangePassword > a,
    .off-canvas-sidebar .nav li.nav-ChangePassword > a {
        background-color: #FFFFFF;
        box-shadow: 0 1px 15px 1px rgba(39, 39, 39, 0.1);
    }
</style>

<input type="hidden" value="@Session["LoginId"]" id="loginId" />
<input type="hidden" id="SubjectId" />

<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <form id="RegisterValidation" action="" novalidate="novalidate">
        <div class="card ">
            <div class="card-header ">
                <h5 class="title">Change Password</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-label">
                            <label>
                                User Name
                            </label>
                            <input class="form-control" name="" id="txtUserName" type="text" readonly/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-label">
                            <label>
                                Old Password
                            </label>
                            <input class="form-control" name="" id="txtOldPassword" type="password" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-label">
                            <label>
                                New Password
                            </label>
                            <input class="form-control" name="" id="txtNewPassword" type="password" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group has-label">
                            <label>
                                Confirm Password
                            </label>
                            <input class="form-control" name="" id="txtConfirmPassword" type="password" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-info" id="saveBtn">Update</button>
            </div>
        </div>
    </form>
</div>

@section scripts{

    <script src="~/SiteJs/admin-change-password.js"></script>

    <script src="https://use.fontawesome.com/900c620bd0.js"></script>
}

